{
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000, immutable"
        }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/",
      "destination": "/manual/docs-home.html",
      "permanent": true
    }
  ],

  "buildCommand": "npm run docs:build",
  "outputDirectory": "docs/.vitepress/dist",
  "installCommand": "npm install",
  
  "functions": {
    "docs/**/*": {
      "maxDuration": 30
    }
  }
}
